<style>
  body {
    background-image: url("/images/profile.jpg");
    height: 100vh;
    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;
  }
</style>
<div class="row profile">
  <div class="col s10 offset-s1 m10 offset-m1 l6 offset-l3">

  <h1 class="white-text">Profile</h1>
  <h2 class="white-text">Welcome <%=@user.username.upcase%></h2>

    <% @user.posts.last(20).each do |post| %>
      <%= will_paginate @posts %>
      <div class="row">
        <div class="col s12 m7" style="width: 100%;">
          <div class="card card-holder" >
            <div class="card-image">
              <img src="<%= post.user.image_url %>" class="responsive-img">
            </div>
            <div class="card-stacked">
            <div class="card-content">
            <span class="card-title"><%= post.title %></span>
              <p><%= post.content %></p>
            </div>
            <div class="card-action">
              <a class="username-link" href="/user-profile/<%= post.user.id %>"><%= post.user.username %></a>
              <form class="btn2" action="/delete-post/<%= post.id %>" method="post">
                <input type="submit" value="Delete Post">
              </form>
            </div>
            </div>
          </div>
        </div>
        </div>
    <% end %>
  </div>
</div>
