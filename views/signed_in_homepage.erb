<style>
  body {
    background-image: url("/images/bg2.jpg");
    height: 100vh;
    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;
  }
</style>
<div class="row home-page">
  <div class="col s10 offset-s1 m10 offset-m1 l6 offset-l3">
  <h1 class="white-black">Home</h1>
    <% @posts.reverse.each do |post| %>
      <div class="row">
        <div class="col s12 m7" style="width: 100%;">
          <div class="card card-holder" >
            <div class="card-image">
              <img src="<%= post.user.image_url %>" class="responsive-img">
            </div>
            <div class="card-stacked">
            <div class="card-content">
            <span class="card-title"><%= post.title %></span>
              <pre><p style="white-space: pre-wrap;"><%= post.content %></p></pre>
            </div>
            <div class="card-action">
            <a class="username-link" href="/user-profile/<%= post.user.id %>">@<%= post.user.username %></a>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


